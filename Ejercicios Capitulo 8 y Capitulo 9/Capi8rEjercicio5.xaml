<Window x:Class="Tarea4Aplicada.Ejercicios_Capitulo_8_y_Capitulo_9.Capi8rEjercicio5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea4Aplicada.Ejercicios_Capitulo_8_y_Capitulo_9"
        mc:Ignorable="d"
        Title="Capi8rEjercicio5" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20,20">
            <StackPanel Orientation="Horizontal" Margin="10,0">
                <Label Content="Digite la primera cadena"/>
                <TextBox x:Name="Cadena1TextBox" Width="120" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,10">
                <Label Content="Digite la segunda cadena"/>
                <TextBox x:Name="Cadena2TextBox" Width="120" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,20">
                <Button x:Name="CadenasButton" Content="Calcular Cadena" Click="CadenasButton_Click"/>
                <TextBox x:Name="CadenasTextBox" Width="120" Height="20" Margin="15,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
